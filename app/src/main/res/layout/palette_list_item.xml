<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_centerInParent="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_marginHorizontal="15dp"
    android:id="@+id/parentPaletteCard"
    android:elevation="80dp"
    app:rippleColor="@color/pink_2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.mikephil.charting.charts.PieChart
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/paletteView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            android:elevation="5dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="palette name"
            android:layout_marginStart="65dp"
            android:id="@+id/paletteName"
            android:layout_below="@+id/paletteView"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="count"
            android:layout_marginStart="65dp"
            android:id="@+id/paletteCount"
            android:layout_below="@+id/paletteName"
            android:layout_marginBottom="15dp"
            android:textColor="#979797"/>



    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>