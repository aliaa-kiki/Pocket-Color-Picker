<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_centerInParent="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_marginHorizontal="15dp"
    android:id="@+id/parentCard"
    android:elevation="80dp"
    app:rippleColor="@color/pink_2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/colorCheckBox"
            android:visibility="gone"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/yellow_1"
            android:visibility="gone"
            android:id="@+id/test"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/colorView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            android:background="@drawable/circle"
            android:elevation="5dp"
            android:backgroundTintMode="multiply"
            android:backgroundTint="@color/pink_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RGB:"
            android:layout_marginStart="15dp"
            android:layout_below="@+id/colorView"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HEX:"
            android:layout_marginStart="15dp"
            android:layout_below="@+id/rgbText"
            android:layout_marginTop="6dp"/>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="225, 225, 255"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/rgbText"
            android:layout_below="@+id/colorView"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#FFFFFF"
            android:layout_marginStart="65dp"
            android:id="@+id/hexText"
            android:layout_below="@+id/rgbText"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="15dp"/>


    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>

